{
  "name": "rubic",
  "version": "0.0.4",
  "description": "rubic",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "miniprogram": "dist/miniprogram",
  "workspaces": [
    "packages/*",
    "docs"
  ],
  "author": "jaskang",
  "license": "MIT",
  "homepage": "https://github.com/JasKang/rubic#readme",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JasKang/rubic.git"
  },
  "bugs": {
    "url": "https://github.com/JasKang/rubic/issues"
  },
  "scripts": {
    "docs:dev": "pnpm --filter docs run dev",
    "docs:build": "pnpm --filter docs run build",
    "docs:serve": "pnpm --filter docs run serve",
    "build": "tsup && npm run build:miniprogram",
    "build:miniprogram": "node scripts/mpBuild.js",
    "release": "release-it",
    "release:beta": "release-it --preRelease=beta",
    "test": "vitest",
    "test-dts": "tsc -p ./tests-dts/tsconfig.json",
    "coverage": "vitest --coverage",
    "lint": "eslint ."
  },
  "devDependencies": {
    "@microsoft/api-extractor": "^7.24.1",
    "@release-it/conventional-changelog": "^5.0.0",
    "@types/fs-extra": "^9.0.13",
    "@types/node": "^17.0.25",
    "@vue/reactivity": "^3.2.36",
    "c8": "^7.11.3",
    "eslint": "^8.13.0",
    "eslint-config-jaskang": "^0.1.3",
    "fs-extra": "^10.1.0",
    "j-component": "^1.4.6",
    "jsdom": "^19.0.0",
    "lint-staged": "^12.3.8",
    "minimist": "^1.2.6",
    "miniprogram-api-typings": "^3.4.6",
    "picocolors": "^1.0.0",
    "prettier": "^2.6.2",
    "release-it": "^15.0.0",
    "simple-git-hooks": "^2.7.0",
    "tsup": "^5.12.8",
    "typescript": "^4.6.3",
    "vitest": "^0.12.6"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.{js,ts,tsx,vue,md}": [
      "prettier --write"
    ]
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "webpack",
        "@types/react",
        "react",
        "react-dom",
        "@algolia/client-search"
      ]
    }
  },
  "packageManager": "pnpm@6.24.4"
}
