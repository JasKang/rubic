{
  "name": "rubic",
  "version": "0.0.3-beta.3",
  "description": "rubic",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "miniprogram": "dist/miniprogram",
  "files": [
    "dist"
  ],
  "author": "jaskang",
  "license": "MIT",
  "homepage": "https://github.com/JasKang/rubic#readme",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JasKang/rubic.git"
  },
  "bugs": {
    "url": "https://github.com/JasKang/rubic/issues"
  },
  "scripts": {
    "docs:dev": "vuepress dev docs",
    "docs:build": "vuepress build docs",
    "build:miniprogram": "esno scripts/mpBuild.ts",
    "build": "tsup --onSuccess \"pnpm run build:miniprogram\"",
    "prepublishOnly": "pnpm build",
    "release": "release-it",
    "release:beta": "release-it patch --preRelease=beta",
    "test": "vitest run",
    "coverage": "vitest --coverage"
  },
  "devDependencies": {
    "@release-it/conventional-changelog": "^4.1.0",
    "@types/fs-extra": "^9.0.13",
    "@types/jest": "^27.4.0",
    "@types/node": "^12.20.41",
    "@types/wechat-miniprogram": "^3.4.0",
    "@typescript-eslint/eslint-plugin": "^5.9.0",
    "@typescript-eslint/parser": "^5.9.0",
    "@vue/reactivity": "^3.2.26",
    "c8": "^7.11.0",
    "eslint": "^8.6.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.4",
    "esno": "^0.14.0",
    "fs-extra": "^10.0.0",
    "j-component": "^1.4.5",
    "jest": "^27.4.7",
    "lint-staged": "^12.2.2",
    "minimist": "^1.2.5",
    "miniprogram-simulate": "^1.4.3",
    "picocolors": "^1.0.0",
    "prettier": "^2.5.1",
    "release-it": "^14.12.3",
    "simple-git-hooks": "^2.7.0",
    "tsup": "^5.11.11",
    "typescript": "^4.5.4",
    "vitest": "^0.1.24",
    "vuepress-vite": "^2.0.0-beta.32"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm exec lint-staged --concurrent false",
    "commit-msg": "pnpm exec esno scripts/verifyCommit.ts $1"
  },
  "lint-staged": {
    "*": [
      "prettier --write --ignore-unknown"
    ],
    "src/**/*.ts": [
      "eslint --ext .ts"
    ],
    "**/*.d.ts": [
      "eslint --ext .ts"
    ]
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "webpack"
      ]
    }
  },
  "packageManager": "pnpm@6.24.4"
}
